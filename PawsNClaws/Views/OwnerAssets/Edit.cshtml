@model PawsNClaws.DATA.EF.OwnerAsset

@{
    ViewBag.Title = "Update " + Model.AssetName;
}

@using (Html.BeginForm("Edit", "OwnerAssets", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.OwnerAssetID)
    @Html.HiddenFor(model => model.AssetPhoto)
    @Html.HiddenFor(model => model.DateAdded)

    <div class="oaContainer" id="oaEditContainer">
        <h2 class="listHeader">@ViewBag.Title</h2>
        <div id="oaEditContent">
            <div id="oaEditLeft">
                <p></p>
                <label>Current Image: </label>
                <br />
                <img class="imagesInView" src="~/Content/assets/images/UserImages/@Model.AssetPhoto" alt="@Model.AssetName" height="250" width="250" />
                <br />
                <label id="oaEditNewImage">Change Image</label>:
                <input type="file" style="margin-bottom:.1em;" name="AssetPhoto" />
            </div>
            <div class="clearfix"></div>
            <div id="oaEditRight">
                <p>
                    @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-md-2", @id = "oaIsActiveText" })
                    <div class="checkbox">
                        @Html.EditorFor(model => model.IsActive)
                        @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                    </div>
                </p>
                <p>
                    @Html.LabelFor(model => model.AssetName, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.AssetName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AssetName, "", new { @class = "text-danger" })
                </p>
                <p style="line-height:inherit">
                    @Html.LabelFor(model => model.SpecialNotes, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.SpecialNotes, new { htmlAttributes = new { @class = "form-control", @style = "resize:none" } })
                    @Html.ValidationMessageFor(model => model.SpecialNotes, "", new { @class = "text-danger" })
                </p>
            </div>
            <div class="clearfix"></div>
            <div class="viewFooters">
                <div class="col-md-7 oaFooterLeft">
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger" })
                </div>
                <div class="col-md-3 oaFooterRight">
                    <input type="submit" value="Update Pet" class="btn btn-primary" />
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
