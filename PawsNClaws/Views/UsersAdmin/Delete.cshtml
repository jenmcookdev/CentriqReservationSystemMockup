@model PawsNClaws.Models.ApplicationUser

@{
    ViewBag.Title = "Delete User";
}

<div class="deleteOutterDiv">

    <h2>@ViewBag.Title</h2>

    <h3>Are you sure you want to delete this User: <span class="myWarning">@Model.UserName</span>?</h3>
      
        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-primary" /> |
                @Html.ActionLink("No", "Index", null, new { @class = "btn btn-danger" })
            </div>
        }
    </div>
