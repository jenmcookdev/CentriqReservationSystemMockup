@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Delete Role";
}

<div class="deleteOutterDiv">
    <h2>@ViewBag.Title</h2>

    <h3>Are you sure you want to delete the role of <span class="myWarning">@Model.Name</span>?</h3>
    <p>Deleting this Role will remove all users from this role. It will not delete the users.</p>
    <div>

        @*<dl class="dl-horizontal">*@
            @*<dt>
                ROLE:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>*@
        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Yes" class="btn btn-primary" /> |
                @Html.ActionLink("No", "Index", null, new { @class = "btn btn-danger" })
            </div>
        }
    </div>
</div>